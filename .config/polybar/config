[module/powermenu]
type = custom/menu

format-padding = 4
format-background = ${colors.grey}
format-foreground = ${colors.green}

label-open = %{T7}%{T-}
label-close = %{T7}%{T-}
label-separator = "  |  "

#TODO: Logout Command
menu-0-0 = Logout
menu-0-0-foreground = ${colors.blue}
menu-0-0-exec = menu-open-1
menu-0-1 = Suspend
menu-0-1-foreground = ${colors.orange}
menu-0-1-exec = menu-open-2
menu-0-2 = Power off
menu-0-2-foreground = ${colors.red}
menu-0-2-exec = menu-open-3

menu-1-0 = Confirm (Logout)
menu-1-0-foreground = ${colors.blue}
menu-1-0-exec = bspc quit && logout

menu-2-0 = Confirm (Suspend)
menu-2-0-foreground = ${colors.red}
menu-2-0-exec = systemctl suspend

menu-3-0 = Confirm (Power Off)
menu-3-0-foreground = ${colors.red}
menu-3-0-exec = systemctl poweroff

[module/volume]
type = internal/volume
master-mixer = Master

format-volume = <ramp-volume> <label-volume>

label-volume = %percentage%%
label-volume-foreground = ${colors.fg}

label-muted =  %percentage%%
label-muted-foreground = ${colors.red}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-font = 6
ramp-volume-foreground = ${colors.fg}

[module/date]
type = internal/date
interval = 5

date = %A, %B %d
time = %H:%M

label = %{T6} %{T-} %date%  %{T6} %{T-} %time%
label-font = 1
label-padding = 4
label-background = ${colors.black}
label-foreground = ${colors.fg}

